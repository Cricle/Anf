<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Anf.Avalon"
             xmlns:conv="using:Anf.Avalon.Converters"
             x:Class="Anf.Avalon.App">
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>
  <Application.Resources>
    <ResourceDictionary>
      <conv:AddConverter x:Key="AddConverter"/>
      <conv:RevBoolConverter x:Key="RevBoolConverter"/>
      <conv:AddNumberConverter x:Key="AddNumberConverter"/>
    </ResourceDictionary>
  </Application.Resources>
  <Application.Styles>
    <FluentTheme Mode="Dark"/>
    <Style Selector="TextBlock.segoblock">
      <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
    </Style>
  </Application.Styles>
</Application>
