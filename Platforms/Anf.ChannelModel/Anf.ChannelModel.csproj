<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\engs\pkg.props" />

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net5.0</TargetFrameworks>
    <EnableMongo>false</EnableMongo>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Responses\**" />
    <EmbeddedResource Remove="Responses\**" />
    <None Remove="Responses\**" />
  </ItemGroup>
  <ItemGroup Condition="'$(EnableMongo)'!=true">
    <Compile Remove="Mongo\AnfComicEntity.cs"></Compile>
  </ItemGroup>
  <ItemGroup Condition="'$(EnableMongo)'==true">
    <PackageReference Include="MongoDB.Bson">
      <Version>2.14.1</Version>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Identity.Stores" Version="6.0.2" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)'=='net5.0'">
    <PackageReference Include="System.Security.Cryptography.OpenSsl" Version="5.0.0" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)'!='net5.0'">
    <PackageReference Include="Portable.BouncyCastle" Version="1.9.0" />

  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Anf.Engine\Anf.Engine.csproj" />
  </ItemGroup>

</Project>
