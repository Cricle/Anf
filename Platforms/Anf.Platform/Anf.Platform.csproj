<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
    <EnableBookshelfService>false</EnableBookshelfService>
  </PropertyGroup>
  <PropertyGroup Condition="'$(EnableBookshelfService)'=='true'">
    <DefineConstants>$(DefineConstants);EnableBookshelfService;</DefineConstants>
  </PropertyGroup>
  <ItemGroup Condition="'$(EnableBookshelfService)'!='true'">
    <Compile Remove="Services\BookshelfService.cs"></Compile>
    <Compile Remove="Services\IBookshelfService.cs"></Compile>
    <Compile Remove="ViewModels\BookshelfViewModel.cs"></Compile>
    <Compile Remove="Models\Bookshelf.cs"></Compile>
    <Compile Remove="ComicDbContext.cs"></Compile>
  </ItemGroup>
  <ItemGroup Condition="'$(EnableBookshelfService)'=='true' and '$(TargetFramework)' == 'netstandard2.1'">
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="5.0.4" />
    <PackageReference Include="Z.EntityFramework.Plus.EFCore">
      <Version>5.1.28</Version>
    </PackageReference>
  </ItemGroup>
  <ItemGroup Condition="'$(EnableBookshelfService)'=='true' and '$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="3.1.4" />
    <PackageReference Include="Z.EntityFramework.Plus.EFCore">
      <Version>3.1.28</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MvvmLightLibsStd10" Version="5.4.1.1" />
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="5.0.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Anf.Engine.Easy\Anf.Easy.csproj" />
    <ProjectReference Include="..\..\src\Anf.Engine\Anf.Engine.csproj" />
    <ProjectReference Include="..\Engines\Anf.KnowEngines\Anf.KnowEngines.csproj" />
  </ItemGroup>
</Project>