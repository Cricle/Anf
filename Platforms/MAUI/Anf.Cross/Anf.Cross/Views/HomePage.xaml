<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:views="clr-namespace:Anf.Cross.ViewModels" 
             x:DataType="views:MAUIHomeViewModel"
             x:Class="Anf.Cross.Views.HomePage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
        <StackLayout Orientation="Vertical">
            <Entry Text="{Binding Keyword,Mode=TwoWay}"/>
            <Button Text="ads"></Button>
        </StackLayout>
    </ScrollView>
</ContentPage>
