<Page x:Class="Kw.Comic.Wpf.Views.Pages.ComicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kw.Comic.Wpf.Views.Pages"
      xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:conv="clr-namespace:Kw.Comic.Wpf.Converters"
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      xmlns:m="clr-namespace:Kw.Comic.Models;assembly=Kw.Comic"
      mc:Ignorable="d" 
      d:DataContext="{x:Type m:ComicSnapshotInfo}"
      xmlns:mto="http://metro.mahapps.com/winfx/xaml/controls"
      d:DesignHeight="450" d:DesignWidth="800">
    <Page.Resources>
        <conv:BoolVisibilityConverter x:Key="BoolVisibilityConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Margin="25,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border>
                <Image Source="{Binding Snapshot.ImageUri}"
                       Stretch="UniformToFill"
                       Width="300"/>
            </Border>
            <StackPanel Grid.Column="1"
                        Orientation="Vertical"
                        Margin="35,0,0,0">
                <StackPanel.Resources>
                    <Thickness x:Key="IconMargin">0,0,12,0</Thickness>
                    <Thickness x:Key="DescMargin">0,12,0,0</Thickness>
                    <sys:Double x:Key="DescFontSize">22</sys:Double>
                </StackPanel.Resources>
                <TextBlock Text="{Binding Snapshot.Name}"
                           Foreground="{DynamicResource MahApps.Brushes.SystemControlForegroundChromeGray}"
                           FontSize="26"/>
                <Grid Margin="{StaticResource DescMargin}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <icon:PackIconMaterialLight Kind="Briefcase"
                                                Margin="{StaticResource IconMargin}"
                                                FontSize="{StaticResource DescFontSize}"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource MahApps.Brushes.SystemControlForegroundChromeGray}"/>
                    <TextBlock Text="{Binding Snapshot.Author}"
                           Foreground="{DynamicResource MahApps.Brushes.SystemControlForegroundChromeGray}"
                           FontSize="{StaticResource DescFontSize}"
                               Grid.Column="1"/>
                </Grid>
                <ItemsControl ItemsSource="{Binding Snapshot.Sources}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{DynamicResource MahApps.Styles.Button.Chromeless}"
                                    FontSize="{StaticResource DescFontSize}"
                                    FocusVisualStyle="{x:Null}"
                                    Margin="6">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="{DynamicResource MahApps.Brushes.SystemControlForegroundChromeGray}"
                                               Grid.Column="1">
                                    </TextBlock>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Grid Margin="{StaticResource DescMargin}">
                    <TextBlock Text="{Binding Snapshot.Descript}"
                               Foreground="{DynamicResource MahApps.Brushes.SystemControlForegroundChromeGray}"
                               FontSize="{StaticResource DescFontSize}"
                               TextWrapping="Wrap"
                               MaxHeight="300"
                               Grid.Column="1">
                        <ToolTipService.ToolTip>
                            <TextBlock Text="{Binding Snapshot.Descript}"
                                       TextWrapping="Wrap"
                                       MaxWidth="400"/>
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </Grid>
            </StackPanel>
        </Grid>
        <Border Grid.Row="1"
                HorizontalAlignment="Center">
            <TextBlock Style="{DynamicResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                       Foreground="{DynamicResource MahApps.Brushes.Foreground}"
                       FontSize="22">引用源</TextBlock>
        </Border>
        <Border Grid.Row="2">
            <ListView ItemsSource="{Binding SourceInfos}"
                      SelectedItem="{Binding CurrentSource,Mode=TwoWay}"
                      FontSize="14">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem"
                           BasedOn="{StaticResource MahApps.Styles.ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal"
                                        Margin="20">
                                <StackPanel.ToolTip>
                                    <Grid>
                                        <TextBlock Visibility="{Binding CanParse,Converter={StaticResource BoolVisibilityConverter}}">可以被解析</TextBlock>
                                        <TextBlock Visibility="{Binding CanParse,Converter={StaticResource BoolVisibilityConverter},ConverterParameter=rev}">无法被解析</TextBlock>
                                    </Grid>
                                </StackPanel.ToolTip>
                                <icon:PackIconMaterialLight Kind="Check"
                                                            VerticalAlignment="Center"
                                                            Visibility="{Binding CanParse,Converter={StaticResource BoolVisibilityConverter}}"/>
                                <icon:PackIconMaterialLight Kind="Tag"
                                                            VerticalAlignment="Center"
                                                            Visibility="{Binding CanParse,Converter={StaticResource BoolVisibilityConverter},ConverterParameter=rev}"/>
                                <TextBlock Text="{Binding Source.Name}"
                                           Margin="6,0"/>
                                <Button Style="{DynamicResource MahApps.Styles.Button.Link.VisualStudio}"
                                        Content="{Binding Source.TargetUrl}"
                                        Command="{Binding OpenCommand}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Grid.Column="1"
                                        HorizontalAlignment="Right">
                                <StackPanel.Resources>
                                    <Thickness x:Key="BlockMargin">6,0</Thickness>
                                </StackPanel.Resources>
                                <Button Style="{DynamicResource MahApps.Styles.Button.MetroSquare}"
                                        Command="{Binding WatchCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <icon:PackIconMaterialLight Kind="SeekNext"
                                                                    Margin="6"/>
                                        <TextBlock VerticalAlignment="Center">观看</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button Style="{DynamicResource MahApps.Styles.Button.MetroSquare}"
                                        Command="{Binding OpenCommand}"
                                        Margin="{StaticResource BlockMargin}">
                                    <StackPanel Orientation="Horizontal">
                                        <icon:PackIconMaterialLight Kind="Cloud"
                                                                    Margin="6"/>
                                        <TextBlock VerticalAlignment="Center">打开</TextBlock>
                                    </StackPanel>
                                </Button>
                                <Button Style="{DynamicResource MahApps.Styles.Button.MetroSquare}"
                                        Command="{Binding CopyCommand}"
                                        Margin="{StaticResource BlockMargin}">
                                    <StackPanel Orientation="Horizontal">
                                        <icon:PackIconMaterialLight Kind="SeekNext"
                                                                    Margin="6"/>
                                        <TextBlock VerticalAlignment="Center">复制</TextBlock>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </Grid>
</Page>
